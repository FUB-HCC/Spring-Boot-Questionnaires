<div class="form-group">
    {{#assign "questionId"}}{{this.id}}{{/assign}}
    {{#assign "questionType"}}{{this.type}}{{/assign}}

    <h5>{{questionText}}</h5>
    {{#if additionalInfo}}
        <p class="sublabel">{{additionalInfo}}</p>
    {{/if}}

    {{#each rows as |row|}}
        <div class="row">
            <div class="col pr-0 mt-1 mb-1 form-check">
                <label class="form-check-label multipleChoiceAndTextAnswerLabel">
                    <input class="form-check-input"
                           type="checkbox"
                            {{checked row.selected true}}
                           name="{{stringFormat "answer-%s-%s-check-%s" questionId questionType row.choiceId}}"
                           value="{{row.choiceId}}">
                    {{row.label}}
                </label>
            </div>
            <div class="col pl-0 mt-1 mb-1">
                <input class="form-control multipleChoiceAndTextAnswerField"
                       type="text"
                       placeholder="Namely"
                       value="{{row.answerText}}"
                       name="{{stringFormat "answer-%s-%s-text-%s" questionId questionType row.choiceId}}">
            </div>
        </div>
    {{/each}}
</div>